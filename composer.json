{
  "repositories": [
    { "type": "composer", "url": "https://composer.typo3.org/" },
    {
      "type": "vcs",
      "url": "https://rickymk@bitbucket.org/rickymk/unify_theme.git"
    },

    {
        "type": "vcs",
        "url": "https://github.com/pitsolutionstypo3/tnt_lightgallery.git"        
    }

  ],


  "name": "tnt/unify-distribution",
  "description" : "TYPO3 CMS Custom Distribution",
  "license": "GPL-2.0+",
  "require": {
    "typo3/cms": "^7.6",
    "typo3-ter/news": "^4.3",
    "typo3-ter/powermail": "^3.4",
    "typo3-ter/vhs":"3.0.1",
    "typo3-ter/fluidpages":"3.6.0",
    "typo3-ter/direct-mail": "^5.1",
    "typo3-ter/realurl": "^2.0",
    "typo3-ter/metaseo": "^2.0",
    "typo3-ter/crawler": "^5.0",
    "typo3-ter/ods-ajaxmailsubscription": "^1.6",
    "typo3-ter/fluidcontent": "^4.4",
    "typo3-ter/t3adminer": "^7.0",
    "tnt/unify-theme":"1.0.7",
    "pitsolutionstypo3/tnt_lightgallery":"1.0.3"
  },
  "extra": {
    "typo3/cms": {
      "cms-package-dir": "{$vendor-dir}/typo3/cms",
      "web-dir": "/"
    }
  },

  "scripts": {
    "post-install-cmd": [
      "sudo mv -f vendor/tnt/unify-theme typo3conf/ext/unify_theme",
      "sudo mv -f typo3conf/ext/unify_theme/Resources/Public/fileadmin fileadmin",
      "sudo mv -f typo3conf/ext/unify_theme/Resources/Public/uploads uploads"
    ],
     "post-update-cmd": []
  }
}
